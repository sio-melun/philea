{% extends "::layout.html.twig" %}

{% block body %}
<div id="titre">{{domaine.nom}}</div>
    <div class="text-center">
        {{domaine.description | raw}} <br />
        <img src="{{asset(("img/upload/domaine/" ~ domaine.path) |  apply_filter('domaine'))}}" />
</div>
 <br />
    <table class="table"> 
        <tr>
            <td>Discipline</td>
            <td>Etablissement</td>
            <td>Classe</td>
            <td>Académie</td>
            <td>Projet</td>
            <td>Avancement</td>
        </tr>
        
        {% for projet in projets %}
            <tr>
            <td>{{ projet.classe.discipline}}</td>
            <td>{{ projet.etablissement.nom}}</td>
            <td>{{ projet.classe.nomcourt}}</td>
            <td>{{ projet.etablissement.academie}}</td>            
            <td><a href="{{ path('philea_projet',{'idProjet' : projet.id}) }}">Voir les étapes</a></td>
            <td>{{ projet.avancementMax}}%</td>
            </tr>
        {% endfor %}
        
    </table>
{% endblock %}
    